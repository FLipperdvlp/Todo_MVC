@model IEnumerable<Todos.Models.TodoViewModel> 

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Abstract TODO - Авторизация</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
<div class="bg-elements"></div>

<div class="auth-container">
    <div class="auth-header">
        <h1 class="auth-title">Abstract TODO</h1>
        <p class="auth-subtitle">Минималистичное управление задачами</p>
    </div>
        
    <form>
        <div class="form-group">
            <label class="form-label" for="email">Email</label>
            <input type="email" class="form-input" id="email" required>
        </div>
            
        <div class="form-group">
            <label class="form-label" for="password">Пароль</label>
            <input type="password" class="form-input" id="password" required>
        </div>
            
        <a href="todos.html" class="btn">Войти</a>
    </form>
        
    <div class="auth-link">
        <span>Нет аккаунта?</span>
        <a href="register.html">Регистрация</a>
    </div>
</div>
</body>
</html>