@model Todos.Models.Register.RegisterViewModel 

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Abstract TODO - Регистрация</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
<div class="bg-elements"></div>

<div class="auth-container">
    <div class="auth-header">
        <h1 class="auth-title">Abstract TODO</h1>
        <p class="auth-subtitle">Создайте аккаунт для управления задачами</p>
    </div>
        
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label class="form-label" for="email">Email</label>
            <input asp-for="Email" type="email" class="form-input" id="email" required />
        </div>
            
        <div class="form-group">
            <label class="form-label" for="password">Пароль</label>
            <input asp-for="Password" type="password" class="form-input" id="password" required />
        </div>
            
        <button type="submit" class="btn">Зарегистрироваться</button>
    </form>
        
    <div class="auth-link">
        <span>Уже есть аккаунт?</span>
        <a href="login.html">Войти</a>
    </div>
</div>
</body>
</html>